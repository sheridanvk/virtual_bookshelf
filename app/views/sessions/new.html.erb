
<% content_for :body_class do %>login_or_signup<% end %>

<h1>Bring your ebooks back into the real world with Virtual Bookcase</h1>

<a href="<%=get_oauth_url%>">
  <%= image_tag("goodreads-login-button.png", :alt => "goodreads login button") %>
</a>

<h2>Already have a Virtual Bookcase account? Welcome back!</h2>
<div>
  <div>
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="field">
        <div class="label">
          <%= f.label :email %>
        </div>
        <div class="input">
          <%= f.email_field :email%>
        </div>
      </div>

      <div class="field">
        <div class="label">
          <%= f.label :password %>
        </div>
        <div class="input">
          <%= f.password_field :password %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>

    <% end %>
  </div>
</div>
